@model Project.Models.Cart

@{
    ViewData["Title"] = "DetailsCUser";
}

<h1>Details</h1>

<div>
    <h4>Cart</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TotalPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TotalPrice)
        </dd>
        <dd>
            if(@Model.Products == null ){
            <dd>No Orders Yet</dd>
            }
            else{
                @foreach (var item in @Model.Products) {
                <dd>
                    @Html.DisplayFor(modelItem => item.Name)
                </dd>
                <dd>
                <img height=150 width=150 src="@Url.Content($"~/template/images/{item.PhotoSrc}")">
                </dd>
        }}
       </dd>

@using NewProj.Classes
@model NewProj.Classes.Order

@{
    ViewData["Title"] = "Edit";
     Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Edit Order</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             <div class="form-group">
                <label asp-for="ID" class="control-label font-weight-bold" style="font-size:x-large ; color:mediumaquamarine">Order ID #@Model.ID</label>
            </div>
           
            <div class="form-group">
                <label asp-for="TotalPrice" class="control-label"></label>
                <input asp-for="TotalPrice" class="form-control" />
                <span asp-validation-for="TotalPrice" class="text-danger"></span>
            </div>
           <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control">
                    <option value="@DeliveryStatus.Pending">@DeliveryStatus.Pending.ToString()</option>
                    <option value="@DeliveryStatus.Dispatched">@DeliveryStatus.Dispatched.ToString()</option>
                    <option value="@DeliveryStatus.Delivered">@DeliveryStatus.Delivered.ToString()</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="CartID" class="control-label"></label>
                <select asp-for="CartID" class="form-control" asp-items="ViewBag.CartID"></select>
                <span asp-validation-for="CartID" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-success">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
